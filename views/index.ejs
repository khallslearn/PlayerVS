<!DOCTYPE html>
<head>
<title>Player vs Player</title>
<!--STYLESHEET LINK-->
<link rel="stylesheet" href="style.css">
<!--GOOGLE FONT-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
<!--ICONS-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>

  <div id="container" >
  
        <table class="table table-hover" id="player1">
            <form action="/search" method="GET">
            <th scope="col" class="table-info"><select id="select1"name="player_name">  
            <% data.forEach(details => { %>   <option ><%= details.player_name %>
            </option>  
            <% }) %> 
      
          </select>
          <button type="submit" class="btn btn-dark" id="btn1">Select</button>
        

        </th>
             <tr class="table-info"> <td><h3>Name:</h3><span id="bringmename"></span></td></tr>
             <tr class="table-info"><td><div class="todo-list-item-points"><h3>Team:</h3><span id="bringmepoints"></span></div></td></tr>
             <tr class="table-info"><td><div class="todo-list-item-points"><h3>Points:</h3><span id="bringmepoints"></span></div></td></tr>
             <tr class="table-info"><td><div class="todo-list-item-points"><h3>Assist:</h3><span id="bringmepoints"></span></div></td></tr>
             <tr class="table-info"><td><div class="todo-list-item-points"><h3>Rebounds:</h3><span id="bringmepoints"></span></div></td></tr>


             
        </table>
    
        <table class="table table-hover" id="player2">


            <th scope="col" class="table-danger"><select id="select2"name="player_name2">  
            <% data.forEach(details => { %>   <option ><%= details.player_name %>
            </option>  
            <% }) %> 
          </select>
        </form> 

        </th>
             <tr class="table-danger"> <td><h3>Name:</h3><span id="bringmename2"></span></td></tr>
             <tr class="table-danger"><td><div class="todo-list-item-points"><h3>Team:</h3><span id="bringmepoints2"></span></div></td></tr>
             <tr class="table-danger"><td><div class="todo-list-item-points"><h3>Points:</h3><span id="bringmepoints2"></span></div></td></tr>
             <tr class="table-danger"><td><div class="todo-list-item-points"><h3>Assist:</h3><span id="bringmepoints2"></span></div></td></tr>
             <tr class="table-danger"><td><div class="todo-list-item-points"><h3>Rebounds:</h3><span id="bringmepoints2"></span></div></td></tr>

           
        </table>


    </div>

</body>